{
  "name": "renovate-bot",
  "version": "0.0.1",
  "description": "Automatic dependency updates for a few projects",
  "main": "index.js",
  "author": "Lukas Eipert <leipert@gitlab.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "renovate": "^23.67.0",
    "renovate-config-monorepo": "^0.43.0",
    "renovate-config-packages": "^0.7.0"
  },
  "scripts": {
    "pretty": "./update-readme.js && prettier --write '*.{js,json,yml,md}'"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
